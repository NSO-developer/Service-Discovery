<config-template xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <device>
      <name>CR-2</name>
      <config>
        <configuration xmlns="http://xml.juniper.net/xnm/1.1/xnm">
          <class-of-service>
            <classifiers>
              <dscp>
                <name>my-dscp-classifier</name>
                <forwarding-class>
                  <name>EF</name>
                  <loss-priority>
                    <name>low</name>
                    <code-points>101110</code-points>
                  </loss-priority>
                </forwarding-class>
                <forwarding-class>
                  <name>AF</name>
                  <loss-priority>
                    <name>low</name>
                    <code-points>001010</code-points>
                  </loss-priority>
                </forwarding-class>
              </dscp>
            </classifiers>
            <forwarding-classes>
              <class>
                <name>EF</name>
              </class>
              <class>
                <name>AF</name>
              </class>
            </forwarding-classes>
            <interfaces>
              <interface>
                <name>eth5</name>
                <unit>
                  <name>0</name>
                  <scheduler-map>my-scheduler-map</scheduler-map>
                  <classifiers>
                    <dscp>
                      <name>my-dscp-classifier</name>
                    </dscp>
                  </classifiers>
                </unit>
              </interface>
            </interfaces>
            <scheduler-maps>
              <name>my-scheduler-map</name>
              <forwarding-class>
                <name>EF</name>
                <scheduler>EF-scheduler</scheduler>
              </forwarding-class>
              <forwarding-class>
                <name>AF</name>
                <scheduler>AF-scheduler</scheduler>
              </forwarding-class>
            </scheduler-maps>
            <schedulers>
              <name>EF-scheduler</name>
              <transmit-rate>
                <percent>30</percent>
              </transmit-rate>
            </schedulers>
            <schedulers>
              <name>AF-scheduler</name>
              <transmit-rate>
                <percent>70</percent>
              </transmit-rate>
            </schedulers>
          </class-of-service>
        </configuration>
      </config>
    </device>
  </devices>
</config-template>
