      <users>
        <user>
          <name>admin</name>
          <uid>9001</uid>
          <gid>100</gid>
          <password>$1$zrol0cha$R3EAjbvn08V7yp8Fc6qA81</password>
          <ssh_keydir>/var/confd/homes/admin/.ssh</ssh_keydir>
